<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mysummary.myproject.android_basis.zidingyi_view.CustomViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.mysummary.myproject.android_basis.zidingyi_view.RoundView.RoundImageView
                android:id="@+id/ri"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/head"
                />
            <com.mysummary.myproject.android_basis.zidingyi_view.RoundView.RoundImageViewTwo
                android:id="@+id/ri_two"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/head"/>
            <com.mysummary.myproject.android_basis.zidingyi_view.RoundView.RoundImageViewThree
                android:id="@+id/ri_three"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/head"/>
            <com.mysummary.myproject.android_basis.zidingyi_view.guolin_view.CustomTitleView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                custom:titleText="3712"
                android:paddingLeft="100dp"
                custom:titleTextColor="#ff0000"
                custom:titleTextSize="40sp"
                android:layout_marginLeft="20dp"
                android:minHeight="100dp"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
