<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android_basis.service.ServiceActivity">

    <Button
        android:id="@+id/btn_to_startervice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_to_startservice"
        />
    <Button
        android:id="@+id/btn_to_bindservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_to_bindservice"
        app:layout_constraintTop_toBottomOf="@+id/btn_to_startervice"/>

</android.support.constraint.ConstraintLayout>
